{% extends "base.twig" %}

{% block content %}

	<div class="uk-width-1-1 padding">
		<div class="content-wrapper">

			<h1>{{ post.title }}</h1>
			
			<div class="uk-grid uk-child-width-1-3@m" uk-height-match=".uk-card">
				{% for post in posts %}
					{% include ['teaser-'~post.post_type~'.twig', 'teaser.twig'] %}
				{% endfor %}
			</div>

			{# {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %} #}

		</div>
	</div>
{% endblock %}
