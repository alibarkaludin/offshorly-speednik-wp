<div class="footer uk-width-1-1 padding-medium">
	<div class="content-wrapper">
		<div class="uk-flex-between uk-child-width-1-1 uk-child-width-auto@m" uk-grid>
			<div class="site-logo">
				<a href="{{ site.url }}">
					{% if options.site_logo %}
						<img src="{{ options.site_logo.url }}" alt="{{ options.site_logo.alt }}">
					{% else %}
						{{ site.name }}
					{% endif %}
				</a>
			</div>
			<div class="footer-menu">
				{% set menu = function('get_menu', 'Footer Menu').get_items %}
				<ul class="uk-child-width-1-1 uk-child-width-auto@m" uk-grid>
					{% for item in menu %}
						<li>
							<a href="{{ item.link }}" class="button button--simple uk-margin-bottom">{{ item.title }}</a>
							{% if item.children %}
								<ul class="uk-grid-small uk-flex-column" uk-grid>
									{% for sub_item in item.children %}
										<li>
											<a {{ sub_item.is_target_blank or sub_item.is_external ? 'target="_blank"' }} href="{{ sub_item.link }}">{{ sub_item.title }}</a>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
						</li>
					{% endfor %}
					<li>
						<div class="uk-margin-bottom">
							<a href="#" class="button button--simple">Contact Us</a>
						</div>
						<div class="uk-grid uk-grid-small uk-flex-column" uk-grid>
							<div>
								<a href="{{ options.footer_fields.contact_number.url }}">{{ options.footer_fields.contact_number.title }}</a>
							</div>
							<div>
								<a href="{{ options.footer_fields.contact_email.url }}">{{ options.footer_fields.contact_email.title }}</a>
							</div>
							<div>
								<div uk-grid>
									{% for item in options.footer_fields.link_icons %}
										<div>
											<a href="{{ item.link.url }}" uk-icon="icon: {{ item.icon }};"></a>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="uk-width-1-1 padding-small footer-copyright">
	<div class="content-wrapper">
		<div class="uk-text-right">
			{{ options.copyright_text }}
		</div>
	</div>
</div>
