{% extends "base.twig" %}

{% block content %}

	<div class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

		{% if post.thumbnail %}
			<div class="uk-margin-bottom">
				<div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light" data-src="{{ post.thumbnail.src }}" uk-img></div>
			</div>
		{% endif %}

		<div class="uk-margin-auto uk-margin-medium-top">
			<div class="content-wrapper article-title">
				<h1>{{ post.title }}</h1>
			</div>
			
			<div class="article-body uk-margin-top">

				{% if 'content-wrapper' in post.content %}
					{{ post.content }}
				{% else %}
					<div class="content-wrapper">
						{{ post.content }}
					</div>
				{% endif %}
				
			</div>
		</div>

	</div>

{% endblock %}