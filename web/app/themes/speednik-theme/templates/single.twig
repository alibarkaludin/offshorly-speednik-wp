{% extends "base.twig" %}

{% block content %}
	<div class="padding">
		<div class="content-wrapper">
			<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				
				{% if post.thumbnail %}
					<div class="uk-margin-bottom">
						<div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light" data-src="{{ post.thumbnail.src }}" uk-img></div>
					</div>
				{% endif %}

				<div class="uk-width-2-3 uk-margin-auto uk-margin-medium-top">
					<div class="article-title">
						<h1>{{ post.title }}</h1>
					</div>
					
					<div class="uk-flex">
						<p class="blog-author">By {{ post.author.name }} <span>&bull;</span> {{ post.date }}</p>
					</div>
					
					<div class="article-body uk-margin-top">
						{{ post.content }}
					</div>
				</div>
			</article>

			{% if related_posts is not empty %}
				<div class="related-posts uk-padding">
					<h2>Related posts</h2>
					<div class="uk-grid uk-child-width-1-3@m" uk-height-match=".uk-card">
						{% for post in related_posts %}
							{{ include('teaser.twig') }}
						{% endfor %}
					</div>
				</div>
			{% endif %}

		</div><!-- /content-wrapper -->
	</div>
{% endblock %}