<div class="featured-single-post uk-width-1-1 bg--{{ styles.background_color }} padding remove-{{ global.padding|join('-') }}">
	<div class="content-wrapper">

		{% if content.header %}
			<h2>{{ content.header }}</h2>
		{% endif %}
		
		{% if content.page_or_post %}
			{% set post = content.page_or_post %}
			{% set featured_img = function('get_the_post_thumbnail_url', post) %}
			{% set url = function('get_the_permalink', post) %}

			<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
				
				<div class="uk-card-media-left uk-cover-container">
					<a href="{{ item_link }}">
						<img src="{{ featured_img }}" alt="" uk-cover>
						<canvas width="1200" height="600"></canvas>
					</a>
				</div>
				
				<div>
					<div class="uk-card-body">
						<a href="{{ item_link }}">
							<h3 class="uk-card-title">{{ post.post_title }}</h3>
						</a>
						<p>{{ post.post_content|excerpt(30) }}</p>
						<div class="cta-wrapper uk-margin-top">
							<a href="{{ url }}" class="uk-text-bold" target="">Read more</a>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
	</div>
</div>