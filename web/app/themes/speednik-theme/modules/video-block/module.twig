<div class="video-block uk-width-1-1 bg--{{ styles.background_color }} padding remove-{{ global.padding|join('-') }}">
	<div class="content-wrapper">
		{% if content.header %}
			<h2>{{ content.header }}</h2>
		{% endif %}
		<div class="aspect-ratio-video">
			{% if content.video.choose_option == 'url' %}
				<iframe src="{{ content.video.video_url }}"></iframe>

			{% elseif content.video.choose_option == 'embed' %}
				{{ content.video.video_embed }}

			{% elseif content.video.choose_option == 'file' %}
				<video controls preload="none" poster="{{ content.video.video_file.video_poster.url }}">
					{% set videos = content.video.video_file.video_files %}
					{% for video in videos %}
						<source src="{{ video.video_file.url }}" type="{{ video.video_file.mime_type }}"/>
					{% endfor %}
				</video>
			{% endif %}
		</div>
	</div>
</div>
