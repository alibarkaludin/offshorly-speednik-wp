<div class="alternating-image-and-content uk-width-1-1 bg--{{ styles.background_color }} padding remove-{{ global.padding|join('-') }}">
	<div class="content-wrapper">
		{% if content.header %}
			<h2 class="uk-text-center">{{ content.header }}</h2>
		{% endif %}
		<div class="list {{ styles.positioning }} uk-margin-medium-top">
			{% for list in content.list %}
				<div class="uk-grid uk-flex uk-flex-middle uk-flex-center" uk-grid>
					<div class="uk-width-1-2@s">
						<div class="uk-cover-container">
							<img src="{{ list.image }}" alt="" uk-cover>
							<canvas width="600" height="450"></canvas>
						</div>
					</div>
					<div class="uk-width-1-2@s">
						{% if list.list_text %}
							<div class="richtext-content">
								{{list.list_text}}
							</div>
						{% endif %}

						{% set cta = list.cta_field %}
						{% if cta %}
							<div class="cta-wrapper uk-margin-top">
								<a href="{{ cta.url }}" class="button button--primary" target="{{ cta.target }}">{{ cta.title }}</a>
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>