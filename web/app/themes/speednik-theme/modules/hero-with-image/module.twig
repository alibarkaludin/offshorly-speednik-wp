<div class="hero-with-image uk-width-1-1 bg--{{ styles.background_color }}">
	<div class="content-wrapper">
		<div class="uk-grid uk-flex-middle" uk-grid>
			<div class="uk-width-3-5@l">
				{% if content.header %}
					<h1>{{ content.header }}</h1>
				{% endif %}
				
				{% if content.body_text %}
					<div class="richtext-content">
						{{ content.body_text }}
					</div>
				{% endif %}

				{% set cta = content.link %}
				{% if cta %}
					<div class="cta-wrapper uk-margin-medium-top">
						<a href="{{ cta.url }}" class="button button--primary" target="{{ cta.target }}">{{ cta.title }}</a>
					</div>
				{% endif %}
			</div>
			<div class="hero-with-image-image uk-width-1-3@l">
				<img src="{{ content.image }}" alt="image">
			</div>
		</div>
	</div>
</div>